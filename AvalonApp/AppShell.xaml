<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AvalonApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AvalonApp.Views"
    Shell.FlyoutBehavior="Flyout"
    >

    
    <ShellContent Title="Home" Icon="icons_house.png">
        <local:MainPage/>
    </ShellContent>

    <ShellContent Title="Entrar" Icon="icon_user.png">
        <local:LoginPage/>
    </ShellContent>

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="{DynamicResource Primary}" Padding="20"
                  HeightRequest="200">
                
                <Image Source="logo_oficial_01.png" />

            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>


</Shell>
